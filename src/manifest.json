{
  "manifest_version": 3,
  "name": "YoutubeSummary",
  "version": "0.0.1",
  "description": "Reads selected text aloud with customizable settings",
  "permissions": ["contextMenus", "tts", "storage"],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "48.png"
    }
  },
  "icons": {
    "48": "48.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://chat.openai.com/*", "https://www.example.com/*"],
      "js": ["contentscript/index.bundle.js"],
      "css": ["contentscript/yt_ai_summary.css"],
      "all_frames": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}