{
    "name": "friday-summary",
    "version": "1.0.0",
    "description": "Friday Summary Component",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "concurrently \"npm run watch\" \"npm run serve\"",
        "build": "tsc",
        "watch": "tsc -w",
        "serve": "nodemon dist/server.js"
    },
    "dependencies": {
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.0",
        "concurrently": "^8.2.2",
        "nodemon": "^2.0.22",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "nodemonConfig": {
        "watch": ["dist"],
        "ext": "js,json"
    }
}
  